    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "create:app --name hello",
            "program": "${workspaceFolder}/minit",
            "args": [
                "create:app",
                "--name",
                "hello"
            ]
        },
        {
            "type": "node",
            "runtimeVersion": "20",
            "request": "launch",
            "name": "npm test",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": [
                "--preserve-symlinks",
                "--inspect",
                "--trace-warnings",
                // "--prof",
                "--expose-internals",
                "${workspaceFolder}/run-test.js"
            ]
        }
    ]
}
